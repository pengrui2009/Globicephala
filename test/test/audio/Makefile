#		    $(TOPDIR)/protocols/J2735/CSAE/codec  
#endif
SUBDIRS += 
OBJ_FILES = $(SUBDIRS:%=%/*.o)


#SRC_FILES := $(wildcard *.c) 
#OBJ_FILES += $(SRC_FILES:%.c=%.o)
#TARGET := $(SRC_FILES:%.c=%)

#ifeq ($(shell if [ -a $(DEPENDENCIES) ]; then $(ECHO) 1; fi),1)
#include $(DEPENDENCIES)
#endif

LDFLAGS = -lm -lrt -pthread -L$(LIBDIR)/libnl/lib-imx6 -L$(LIBDIR)/alsa/lib -lnl-3 -lnl-genl-3 -lasound

TARGET = audio_test

SUBDIRS = \
      $(TOPDIR)/osal/linux \
	  $(TOPDIR)/osal \
	  $(TOPDIR)/drivers/audio \
	  $(TOPDIR)/drivers/barometer \
	  $(TOPDIR)/drivers/cmn \
	  $(TOPDIR)/drivers/gps \
	  $(TOPDIR)/drivers/led \
	  $(TOPDIR)/drivers/pps \
	  $(TOPDIR)/drivers/tbox \
	  $(TOPDIR)/drivers/vguest \
	  $(TOPDIR)/drivers/vhost \
	  $(TOPDIR)/drivers/vnet \
	  $(TOPDIR)/protocols/nmea0183 \


all:app image
	@
app:
	@for subdir in $(SUBDIRS); do \
		(cd $$subdir && $(MAKE) all) || exit 1; \
	done	
image:
	$(CC) $(CFLAGS) $(CFLAGS_DBG) -c pcm_resource.c -o pcm_resource.o
	$(CC) $(CFLAGS) $(CFLAGS_DBG) -c audio_test.c -o audio_test.o
	$(CC) $(OBJ_FILES) pcm_resource.o audio_test.o $(LDFLAGS) -o $(TARGET)
	$(STRIP) --strip-unneeded  --remove-section=.comment --remove-section=.note $(TARGET)	
$(DEPENDENCIES): $(SRC_FILES)
	@ $(ECHO) '##' > $(DEPENDENCIES)
	@ $(ECHO) '## This file is generated by "make"!' >> $(DEPENDENCIES)
	@ $(ECHO) '##' >> $(DEPENDENCIES)
	@for i in $^ ; do \
		$(CC) -M -MG $(CFLAGS) $$i >> $(DEPENDENCIES);  \
		$(ECHO) '##' >> $(DEPENDENCIES);	\
	done
	
ifeq ($(shell if [ -a $(DEPENDENCIES) ]; then $(ECHO) 1; fi),1)
include $(DEPENDENCIES)
endif

clean:
	rm -fr $(TARGET)
	@for subdir in $(SUBDIRS); do \
		(cd $$subdir && $(MAKE) clean) || exit 1; \
	done	
	-rm -f *.o $(DEPENDENCIES)
